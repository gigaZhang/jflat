<project name="jflat-code" default="compile" basedir=".">

	<property file="build-code.properties" />

	<import file="build-classpath.xml"/>

	<target name="init">
		<mkdir dir="${build.classes}" />
	</target>

	<target name="clean" description="Erases contents of classes dir">
		<delete dir="${build.classes}" />
	</target>

	<target name="compile" depends="init" description="Compiles all source code.">
		<javac srcdir="${src.java}" destdir="${build.classes}" classpathref="class.path" debug="true" debuglevel="lines,source" />
	</target>

</project>